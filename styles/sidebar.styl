.sidebar-container
  display: flex
  flex-flow: column wrap
  float: right

.sidebar

  .players ul 
    list-style-type: none
    padding: 0
    margin: 0
  
  .sidebar-content
    font-size: 18px
    padding: 10px
    border-radius: 10px
    border: 1px solid #ccc
    margin-top: 10px
    
    &:first-child
      margin-top: 2px

    .sidebar-content-title 
      font-size: 24px
      margin: 8px 0 8px 0
      border-bottom: 1px solid #ccc
      color: #333
    
      &:first-child
        margin-top: 0
  
    .suboption
      margin-left: 20px
      
      select
        margin-top: 2px

    .checkbox.disable
        color: #bbb

  @media (max-width: 750px)
    .sidebar-content
      .suboption
        margin-left: 30px

.choosing-icon
  background-image: url("/img/cards/backside_blue.jpg")
  background-size: contain
  background-repeat: no-repeat
  display: inline-block
  width: 19px
  height: 30px
  position: relative
  top: 10px
  transform-origin: center center

  animation: coin-rotate 2s both infinite

@keyframes coin-rotate {
  0 {
    transform: rotateY(0)
  }
  50% {
    transform: rotateY(180deg)
  }
  100% {
    transform: rotateY(0deg)
  }
}
